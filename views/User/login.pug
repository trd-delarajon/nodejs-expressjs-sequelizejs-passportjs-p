doctype html
html(lang='en')
  include ../common/head.pug
  +head(title)
  
  body
    include ../common/navbar.pug
    +navbar()
    div.container
        div.row.centered-form
            div.col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
                div.panel.panel-default
                    div.panel-heading
                        h3.panel-title Please login first teehee
                            div.panel-body
                                form(action="/login" role="form" method="POST")
                                    div.row
                                        div.col-xs-6.col-sm-6.col-md-6
                                            div.form-group
                                                input(type="text" name="username" id="username" class="form-control input-sm" placeholder="User name" value=formData.username)
                                                if(errors.username)
                                                    p.small.text-danger #{errors.username}
                                        div.col-xs-6.col-sm-6.col-md-6
                                            div.form-group
                                                input(type="password" name="password" id="password" class="form-control input-sm" placeholder="Password")
                                                if(errors.password)
                                                    p.small.text-danger #{errors.password}
                                        input(type="submit" value="Login").btn.btn-info.btn-block

  include ../common/foot.pug
  +foot(footer)
