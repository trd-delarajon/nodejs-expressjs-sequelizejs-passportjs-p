doctype html
html(lang='en')
  include ../common/head.pug
  +head(title)
  
  body
    include ../common/navbar.pug
    +navbar(user)
    div.container
        div.row.centered-form
            div.col-xs-12.col-sm-8.col-md-4.col-sm-offset-2.col-md-offset-4
                div.panel.panel-default
                    div.panel-heading
                        h3.panel-title Please register first teehee
                            div.panel-body
                                form(role="form")
                                    div.row
                                        div.col-xs-6.col-sm-6.col-md-6
                                            div.form-group
                                                input(type="text" name="first_name" id="username" class="form-control input-sm" placeholder="User name")
                                        div.col-xs-6.col-sm-6.col-md-6
                                            div.form-group
                                                input(type="pass" name="last_name" id="password" class="form-control input-sm" placeholder="Password")
                                        
                                        input(type="submit" value="Register").btn.btn-info.btn-block

  include ../common/foot.pug
  +foot(footer)
